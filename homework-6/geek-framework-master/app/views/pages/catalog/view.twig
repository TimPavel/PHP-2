{% extends '/layouts/default.twig' %}

{% block content %}

	<form method="post">
		<a href="/catalog">Назад</a>

		<h2>Название: {{ item.name }}</h2>
		<img src="/storage/img/product.jpg" alt="goodImage">
		<p>Цена: {{  item.price }}</p>
		<p>Описание: {{ item.description }}</p>

		<button value="{{ item.id }}">Добавить в корзину</button>
	</form>

	<a href="/cart">Перейти в корзину</a>


{% endblock %}