{% extends '/layouts/default.twig' %}

{% block content %}

	<form method="post">
		<a href="/cat/{{ item.shop_category_id }}">Назад</a>

		<h2>Название: {{ item.name }}</h2>
		<img src="/storage/img/{{ item.img }}" alt="goodImage" class="detailedImg">
		<p>Цена: {{  item.price }}</p>
		<p>Описание: {{ item.description }}</p>
		<button id="add2Cart" value="{{ item.id }}">Добавить в корзину</button>
	</form>

	<a href="/cart">Перейти в корзину</a>


{% endblock %}